<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.wallet.presentation.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_assetListFragment"
            app:destination="@id/assetListFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.wallet.presentation.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_chooseDefaultCurrencyFragment"
            app:destination="@id/chooseDefaultCurrencyFragment" />
    </fragment>
    <fragment
        android:id="@+id/assetListFragment"
        android:name="com.example.wallet.presentation.asset_list.AssetListFragment"
        android:label="Assets"
        tools:layout="@layout/fragment_asset_list">
        <action
            android:id="@+id/action_assetListFragment_to_assetFragment"
            app:destination="@id/assetFragment" />
    </fragment>
    <fragment
        android:id="@+id/assetFragment"
        android:name="com.example.wallet.presentation.asset.AssetFragment"
        android:label="AssetFragment"
        tools:layout="@layout/fragment_asset" >
        <argument
            android:name="asset_id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <dialog
        android:id="@+id/chooseDefaultCurrencyFragment"
        android:name="com.example.wallet.presentation.util.string_selector_bottom_sheet.ChooseDefaultCurrencyFragment"
        android:label="ChooseDefaultCurrencyFragment" />
</navigation>
